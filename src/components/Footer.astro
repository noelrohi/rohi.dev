---
import {
  GitHubLogoIcon,
  TwitterLogoIcon,
  InstagramLogoIcon,
  LinkedInLogoIcon,
  EnvelopeClosedIcon,
} from "@radix-ui/react-icons";
---

<footer class="flex justify-between items-center">
  <span>
    Powered by
    <a
      href="https://astro.build"
      target="_blank"
      rel="noopener noreferrer"
      class="underline underline-offset-4">Astro 4.0.6</a
    >
  </span>
  <div class="flex flex-row gap-4">
    <a href="mailto:n@rohi.dev" class="hover:scale-125">
      <span class="sr-only">Email Address</span>
      <EnvelopeClosedIcon />
    </a>
    <a
      href="https://instagram.com/nelrohg"
      target="_blank"
      rel="noopener noreferrer"
      class="hover:scale-125"
    >
      <span class="sr-only">Instagram</span>
      <InstagramLogoIcon />
    </a>
    <a
      href="https://twitter.com/gneiru"
      target="_blank"
      rel="noopener noreferrer"
      class="hover:scale-125"
    >
      <span class="sr-only">Twitter</span>
      <TwitterLogoIcon />
    </a>
    <a
      href="https://www.linkedin.com/in/gneiru/"
      target="_blank"
      rel="noopener noreferrer"
      class="hover:scale-125"
    >
      <span class="sr-only">Linkedin</span>
      <LinkedInLogoIcon />
    </a>
    <a
      href="https://github.com/gneiru"
      target="_blank"
      class="hover:scale-125"
      rel="noopener noreferrer"
    >
      <span class="sr-only">Github</span>
      <GitHubLogoIcon />
    </a>
    <a
      href="/rss.xml"
      target="_blank"
      rel="noopener noreferrer"
      class="hover:scale-125"
    >
      <span class="sr-only">RSS</span>
      <svg
        width="1em"
        height="1em"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          fill="currentColor"
          d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"
        ></path>
      </svg>
    </a>
  </div>
</footer>
